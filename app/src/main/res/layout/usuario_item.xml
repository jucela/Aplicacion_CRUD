<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/usuario_item_cardview"
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_height="60dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/usuario_item_id"
            android:layout_width="0dp"
            android:text="Id"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/usuario_item_nombres"
            android:layout_width="0dp"
            android:text="Nombres"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/usuario_item_apellidos"
            android:layout_width="0dp"
            android:text="Apellidos"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/usuario_item_usuario"
            android:layout_width="0dp"
            android:text="Usuario"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/usuario_item_password"
            android:layout_width="0dp"
            android:text="ContraseÃ±a"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
</android.support.v7.widget.CardView>